@using Template9.Models;
@model List<Employee>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a asp-controller="employee" asp-action="create" class="btn btn-success">Create Employee</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee employee in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td class="py-1">
                                    <img src="~/assets/img/team/@employee.Image"/>
                                </td>
                                <td>
                                    @employee.Name
                                </td>
                                <td>
                                    @employee.Description
                                </td>
                                <td>
                                    @employee.Position.Name
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="employee" asp-action="update" asp-route-id="@employee.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="employee" asp-action="delete" asp-route-id="@employee.Id">Delete</a>
                                </td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
